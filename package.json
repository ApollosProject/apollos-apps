{
  "name": "apollos",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native-svg"
    ]
  },
  "scripts": {
    "start": "lerna run build && yarn push-all && yarn build:api-watch",
    "build:api-watch": "node ./scripts/watch.js",
    "link-packages": "lerna exec -- yarn yalc publish",
    "unlink-packages": "lerna exec -- yarn yalc installations clean",
    "push-all": "lerna exec -- yarn yalc push",
    "lint": "lerna run lint",
    "test": "TZ=utc lerna run test",
    "ci-test": "lerna run test  --stream -- --maxWorkers=2",
    "release": "lerna publish --conventional-commits --conventional-graduate && echo 'TODO: this didnt do a GH release, next time try without \"graduate\" flag'",
    "release:beta": "lerna publish --conventional-commits --conventional-prerelease --preid beta --dist-tag beta",
    "release:canary": "lerna publish --conventional-commits --canary --yes",
    "prepublishOnly": "lerna run build && lerna run generate-stories",
    "nuke": "./scripts/boom.sh && yarn nuke:node && yarn nuke:cache",
    "nuke:node": "rm -rdf ./node_modules packages/*/node_modules && yarn cache clean && yarn",
    "nuke:cache": "watchman watch-del-all",
    "postinstall": "lerna run build --parallel",
    "generate-docs": "lerna run generate-docs",
    "generate-stories": "rnstl --searchDir ./src --pattern **/*.stories.js",
    "storybook": "(lerna run generate-stories && cd ApollosStorybook && yarn && yarn ios)"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "^7.4.4",
    "@babel/node": "7.0.0",
    "@babel/parser": "7.1.6",
    "@babel/runtime": "^7.4.4",
    "apollo": "^1.9.2",
    "apollo-client": "2.5.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "chokidar": "^3.0.1",
    "codecov": "3.7.1",
    "lerna": "^3.14.0",
    "prettier": "^1.14.2",
    "react-apollo": "2.5.5",
    "react-native-storybook-loader": "^1.8.0",
    "yalc": "^1.0.0-pre.35"
  }
}
