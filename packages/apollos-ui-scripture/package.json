{
  "name": "@apollosproject/ui-scripture",
  "repository": "git://github.com/apollosproject/apollos-apps.git",
  "engines": {
    "node": ">=12"
  },
  "version": "2.19.0",
  "main": "src/index.js",
  "files": [
    "src/**",
    "storybook/**"
  ],
  "scripts": {
    "generate-stories": "rnstl --searchDir ./src --pattern **/*.stories.js",
    "test": "jest --no-watchman",
    "lint": "eslint ./src --ext .js"
  },
  "keywords": [
    "react-native-component",
    "react-component",
    "react-native"
  ],
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcovonly",
      "clover"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|rn-*|@react-native-picker|react-clone-referenced-element|@react-navigation/native|@apollosproject))"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(test|tests).{js,jsx,mjs}"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "modulePathIgnorePatterns": [
      "node_modules/@storybook/"
    ],
    "setupFiles": [
      "../apollos-ui-test-utils/src/mocks/reanimated.js",
      "./jest.setup.js"
    ]
  },
  "peerDependencies": {
    "@apollosproject/ui-htmlview": "*",
    "@apollosproject/ui-kit": "*",
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@apollosproject/ui-storybook": "^2.19.0",
    "@storybook/react-native": "5.2.4",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "prop-types": "15.6.1",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "react-test-renderer": "16.13.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "gitHead": "eb803583da83beeab7756baddcae3adca7650c39"
}
