{
  "name": "@apollosproject/ui-kit",
  "version": "0.6.0",
  "homepage": "https://github.com/ApollosProject/apollos-prototype#readme",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "NODE_ENV=production rm -rf ./lib && mkdir -p lib && babel ./src -d ./lib",
    "lint": "eslint ./src --ext .js",
    "start": "rm -rf ./lib && mkdir -p lib && nodemon --exec \"babel ./src --watch -d ./lib\" --ignore lib/"
  },
  "keywords": [
    "react-native-component",
    "react-component",
    "react-native"
  ],
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|rn-*|react-clone-referenced-element|react-navigation))"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(test|tests).{js,jsx,mjs}"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "transform": {
      ".+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-linear-gradient": "*",
    "react-native-svg": "*"
  },
  "dependencies": {
    "color": "^3.1.0",
    "lodash": "^4.17.11",
    "react-native-modal-datetime-picker": "6.0.0",
    "react-native-tab-view": "1.0.2",
    "recompose": "^0.30.0",
    "rn-placeholder": "1.2.0"
  },
  "devDependencies": {
    "@storybook/react-native": "^4.0.6",
    "babel-preset-apollos": "file:../babel-preset-apollos",
    "babel-preset-react-native": "5",
    "codecov": "3.1.0",
    "get-yarn-workspaces": "^1.0.2",
    "jest": "23.5.0",
    "jest-react-native": "18.0.0",
    "react": "16.4.1",
    "react-native": "0.56.0",
    "react-native-linear-gradient": "2.4.0",
    "react-native-svg": "6.5.2",
    "react-test-renderer": "16.4.1"
  }
}