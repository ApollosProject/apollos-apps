{
  "name": "@apollosproject/server-core",
  "version": "0.6.0",
  "homepage": "https://github.com/ApollosProject/apollos-prototype#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "NODE_ENV=production rm -rf ./lib && mkdir -p lib && babel ./src -d ./lib",
    "lint": "eslint ./src --ext .js",
    "start": "rm -rf ./lib && mkdir -p lib && nodemon --exec \"babel ./src --watch -d ./lib\" --ignore lib/"
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test|tests).{js,jsx,mjs}"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "graphql-tag": "^2.10.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "babel-preset-apollos": "file:../babel-preset-apollos",
    "casual": "^1.5.19"
  }
}
