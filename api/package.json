{
  "name": "apollos-church-api",
  "version": "0.4.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/nodemon ./index.js --exec babel-node",
    "test": "bash ../scripts/test-script.sh",
    "test:watch": "./node_modules/.bin/jest --maxWorkers=2 --watch",
    "lint": "./node_modules/.bin/eslint ./src --ext .js",
    "fixlint": "./node_modules/.bin/eslint ./src --ext .js --fix",
    "codecov": "cat ./coverage/lcov.info | ./node_modules/.bin/codecov",
    "release": "standard-version --release-as minor"
  },
  "engines": {
    "node": "^8.11.x"
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/**/?(*.)(spec|test|tests).{js,jsx,mjs}"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.1.1",
    "apollo-server": "^2.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "casual": "^1.5.19",
    "color": "^3.0.0",
    "crypto": "^1.0.1",
    "dataloader": "^1.4.0",
    "dotenv": "^6.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.15.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "graphql": "^0.13.2",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "prettier": "1.12.1",
    "randomcolor": "^0.5.3",
    "sanitize-html": "^1.18.2",
    "url-join": "^4.0.0",
    "with-query": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "codecov": "^3.0.2",
    "coveralls": "^3.0.1",
    "jest": "^23.0.0",
    "jest-fetch-mock": "^1.6.2",
    "nodemon": "^1.17.5"
  },
  "now": {
    "name": "apollos-church-api",
    "alias": "apollos-church-api.now.sh",
    "env": {
      "ROCK_API": "@rock_api",
      "ROCK_TOKEN": "@rock_token"
    }
  }
}
