{
  "name": "@apollosproject/data-connector-bible",
  "version": "0.8.0-alpha.2",
  "homepage": "https://github.com/ApollosProject/apollos-prototype#readme",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "NODE_ENV=production rm -rf ./lib && mkdir -p lib && babel ./src -d ./lib",
    "lint": "eslint ./src --ext .js"
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test|tests).{js,jsx,mjs}"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@apollosproject/data-schema": "^0.8.0-alpha.2",
    "apollo-datasource-rest": "^0.2.0",
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "@apollosproject/config": "*"
  },
  "devDependencies": {
    "@apollosproject/babel-preset-apollos": "^0.8.0-alpha.2",
    "jest": "^23.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
